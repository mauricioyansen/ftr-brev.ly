{
  "moduleFileExtensions": ["js", "json", "ts"],
  "rootDir": "..",
  "testEnvironment": "node",
  "testRegex": ".e2e-spec.ts$",
  "transform": {
    "^.+\\.(t|j)s$": "ts-jest"
  },
  "moduleNameMapper": {
    "@/(.*)": "<rootDir>/src/$1"
  },
  "setupFiles": ["<rootDir>/test/setup-e2e.ts"],
  "transformIgnorePatterns": ["/node_modules/(?!nanoid)"],
  "testTimeout": 30000
}
